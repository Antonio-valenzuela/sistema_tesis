<Window x:Class="SistemaSeguimientoTesis.Views.VistaPreviaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vista previa de entrega"
        Height="250"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FFF9F9FF">

    <Border Background="White"
            CornerRadius="10"
            Padding="20"
            Margin="10"
            BorderBrush="#4B0082"
            BorderThickness="1">
        <StackPanel>

            <TextBlock Text="Vista previa de entrega"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#4B0082"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Archivo:"
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="txtNombreArchivo"
                       Margin="0,0,0,10"
                       Foreground="#333"/>

            <TextBlock Text="Información:"
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="txtInfoArchivo"
                       Margin="0,0,0,15"
                       TextWrapping="Wrap"
                       Foreground="#555"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Guardar como..."
                        Width="110"
                        Margin="0,0,10,0"
                        Click="BtnGuardarComo_Click"/>
                <Button Content="Cerrar"
                        Width="80"
                        Click="BtnCerrar_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>

