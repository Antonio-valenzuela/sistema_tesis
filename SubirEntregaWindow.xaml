<Window x:Class="SistemaSeguimientoTesis.Views.SubirEntregaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subir Entrega"
        Height="400"
        Width="500"
        Background="#FFF9F9FF"
        WindowStartupLocation="CenterOwner">

	<Border Background="White"
            CornerRadius="10"
            Padding="20"
            Margin="10"
            BorderBrush="#4B0082"
            BorderThickness="1">
		<StackPanel>

			<TextBlock Text="Subir Entrega"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#4B0082"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

			<!-- Tipo -->
			<TextBlock Text="Tipo de entrega:" Margin="0,0,0,5"/>
			<ComboBox x:Name="comboTipo"
                      Height="30"
                      Background="#F0F0F5"
                      Margin="0,0,0,10">
				<ComboBoxItem Content="Capítulo 1"/>
				<ComboBoxItem Content="Capítulo 2"/>
				<ComboBoxItem Content="Capítulo 3"/>
				<ComboBoxItem Content="Avance General"/>
				<ComboBoxItem Content="Documento Final"/>
			</ComboBox>

			<!-- Archivo -->
			<TextBlock Text="Archivo:" Margin="0,0,0,5"/>

			<StackPanel Orientation="Horizontal">
				<TextBox x:Name="txtArchivoSeleccionado"
                         Width="300"
                         Height="30"
                         Background="#EAEAEA"
                         IsReadOnly="True"
                         Margin="0,0,10,0"/>
				<Button Content="Seleccionar"
                        Width="120"
                        Height="30"
                        Click="BtnSeleccionarArchivo_Click"/>
			</StackPanel>

			<!-- Info del archivo -->
			<TextBlock x:Name="txtInfoArchivo"
                       Margin="0,5,0,0"
                       Foreground="#666"/>

			<!-- Guardar copia local -->
			<CheckBox x:Name="chkGuardarCopiaLocal"
                      Content="Guardar copia local en Mis documentos\EntregasTesis"
                      Margin="0,10,0,0"/>

			<!-- Botones -->
			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
				<Button Content="Cancelar"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="BtnCancelar_Click"/>
				<Button Content="Subir"
                        Width="80"
                        Click="BtnSubir_Click"/>
			</StackPanel>

		</StackPanel>
	</Border>
</Window>






