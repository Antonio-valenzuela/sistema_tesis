<Window x:Class="SistemaSeguimientoTesis.Views.PanelAdmin" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administrador" Height="700" Width="1000" 
        Background="#FFF9F9FF" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Border Background="White" CornerRadius="10" Padding="20" Margin="10"
            BorderBrush="#4B0082" BorderThickness="1">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Título -->
                <TextBlock Text="Gestión de Usuarios y Proyectos"
                           FontSize="24" FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

				<!-- Barra de búsqueda -->
				<StackPanel Orientation="Horizontal"
							HorizontalAlignment="Right"
							Margin="0,0,0,10">
					<TextBlock Text="Buscar usuario:"
							   VerticalAlignment="Center"
							   Margin="0,0,5,0"/>
					<TextBox x:Name="txtBuscar"
							 Width="200" Height="30"
							 Margin="0,0,10,0"
							 Background="#F0F0F5"
							 BorderBrush="#CCC"/>
					<Button Content="Buscar"
							Click="BtnBuscar_Click"
							Style="{StaticResource PurpleButtonStyle}"
							Margin="0,0,5,0"/>
					<Button Content="Limpiar"
							Click="BtnLimpiar_Click"
							Style="{StaticResource TransparentButtonStyle}"/>
				</StackPanel>



				<!-- Botones de usuario -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,10">
                    <Button Content="Agregar"
                            Click="BtnAgregar_Click"
                            Style="{StaticResource PurpleButtonStyle}"
                            Margin="5"/>
                    <Button Content="Editar"
                            Click="BtnEditar_Click"
                            Style="{StaticResource TransparentButtonStyle}"
                            Margin="5"/>
                    <Button Content="Eliminar"
                            Click="BtnEliminar_Click"
                            Style="{StaticResource TransparentButtonStyle}"
                            Margin="5"/>
                </StackPanel>

                <!-- ===========================
                     Tabla de Usuarios
                     =========================== -->
                <GroupBox Header="Usuarios" FontWeight="Bold" Margin="0,10,0,10">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dgUsuarios"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F9F9F9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding UsuarioID}"
                                                    Width="Auto"/>
                                <DataGridTextColumn Header="Nombre"
                                                    Binding="{Binding Nombre}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Email"
                                                    Binding="{Binding Email}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Rol"
                                                    Binding="{Binding Rol}"
                                                    Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </GroupBox>

                <!-- ===========================
                     Proyectos sin asignar
                     =========================== -->
                <GroupBox Header="Proyectos sin asignar" FontWeight="Bold" Margin="0,0,0,10">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dgProyectos"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F9F9F9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding ProyectoID}"
                                                    Width="Auto"/>
                                <DataGridTextColumn Header="Título"
                                                    Binding="{Binding Titulo}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Estatus"
                                                    Binding="{Binding Estatus}"
                                                    Width="160"/>
                                <DataGridTextColumn Header="Profesor"
                                                    Binding="{Binding NombreProfesor}"
                                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </GroupBox>

                <!-- ===========================
                     Proyectos asignados
                     =========================== -->
                <GroupBox Header="Proyectos Asignados" FontWeight="Bold" Margin="0,0,0,10">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dgProyectosAsignados"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F9F9F9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding ProyectoID}"
                                                    Width="Auto"/>
                                <DataGridTextColumn Header="Título"
                                                    Binding="{Binding Titulo}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Estatus"
                                                    Binding="{Binding Estatus}"
                                                    Width="160"/>
                                <DataGridTextColumn Header="Profesor"
                                                    Binding="{Binding NombreProfesor}"
                                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </GroupBox>

                <!-- ===========================
                     Asignación de Profesor
                     =========================== -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <ComboBox x:Name="cbProfesores"
                              Width="250" Height="30"
                              Margin="5"
                              Background="#F0F0F5"
                              BorderBrush="#CCC"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="UsuarioID"
                              ToolTip="Selecciona un profesor para asignar"/>
                    <Button Content="Asignar Profesor"
                            Click="BtnAsignarProfesor_Click"
                            Style="{StaticResource PurpleButtonStyle}"
                            Margin="5"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>







